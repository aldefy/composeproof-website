---
const waves = [
  {
    number: 1,
    title: 'Headless Rendering & Verification',
    status: 'shipped',
    items: ['render', 'list_previews', 'verify', 'render_batch', 'diff', 'insights'],
  },
  {
    number: 2,
    title: 'Device Inspection & Interaction',
    status: 'shipped',
    items: ['preflight', 'inspect_ui_tree', 'device_interact', 'take_device_screenshot', 'build_and_deploy', 'get_build_status', 'get_recomposition_stats', 'get_network_logs', 'manage_proxy', 'get_feature_flags'],
  },
  {
    number: 3,
    title: 'Embedded Agent â€” Runtime Inspection',
    status: 'shipped',
    items: ['inspect_permissions', 'inspect_process_lifecycle', 'inspect_navigation_graph', 'inspect_datastore', 'inspect_coroutine_state', 'execute_deeplink', 'simulate_process_death'],
  },
  {
    number: 4,
    title: 'AI Skills & Session Learning',
    status: 'shipped',
    items: ['npx composeproof installer', 'compose-ui-workflow skill', 'composeproof learn', 'session transcript parser', 'anti-pattern extraction'],
  },
  {
    number: 5,
    title: 'Multiplatform & CI',
    status: 'planned',
    items: ['CMP rendering', 'Gradle plugin', 'GitHub Action', 'HTML reports', 'SSE transport'],
  },
];
---

<section class="py-20 lg:py-28">
  <div class="max-w-7xl 2xl:max-w-[85%] mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Roadmap
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        36 tools ready across 4 waves. Skills & learning shipped. Multiplatform next.
      </p>
    </div>

    <div class="space-y-6">
      {waves.map((wave) => (
        <div class="rounded-xl border border-brand-border bg-brand-card/20 p-6">
          <div class="flex items-center gap-4 mb-4">
            <div class:list={[
              'w-10 h-10 rounded-lg flex items-center justify-center font-mono font-bold text-sm',
              wave.status === 'shipped' ? 'bg-green-500/20 text-green-400' :
              wave.status === 'current' ? 'bg-brand-purple/20 text-brand-purple' :
              wave.status === 'next' ? 'bg-brand-teal/20 text-brand-teal' :
              'bg-brand-card text-slate-400',
            ]}>
              {wave.number}
            </div>
            <div>
              <h3 class="text-lg font-semibold">{wave.title}</h3>
              <span class:list={[
                'text-xs uppercase tracking-wider',
                wave.status === 'shipped' ? 'text-green-400' :
                wave.status === 'current' ? 'text-brand-purple' :
                wave.status === 'next' ? 'text-brand-teal' :
                'text-slate-400',
              ]}>
                {wave.status === 'shipped' ? 'Ready' : wave.status === 'current' ? 'In progress' : wave.status === 'next' ? 'Up next' : 'Planned'}
              </span>
            </div>
          </div>
          <div class="flex flex-wrap gap-2">
            {wave.items.map((item) => (
              <code class="text-xs px-2 py-1 rounded bg-brand-darker text-slate-400 font-mono">{item}</code>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
