---
const waves = [
  {
    number: 1,
    title: 'Foundation',
    status: 'current',
    items: ['inspect_navigation_graph', 'inspect_coroutine_state', 'inspect_datastore', 'inspect_permissions', 'execute_deeplink', 'inspect_process_lifecycle', 'simulate_process_death'],
  },
  {
    number: 2,
    title: 'Compose Intelligence',
    status: 'next',
    items: ['track_recompositions', 'analyze_stability', 'inspect_compose_state', 'profile_lazy_list', 'semantic_ui_query'],
  },
  {
    number: 3,
    title: 'Advanced Debugging',
    status: 'planned',
    items: ['detect_memory_leaks', 'inspect_threads', 'capture_anr_trace', 'inspect_work_manager', 'inspect_crash_history'],
  },
  {
    number: 4,
    title: 'AI-Powered Workflows',
    status: 'planned',
    items: ['autonomous_exploration', 'correlate_state_and_ui', 'diff_app_state', 'verify_fix', 'audit_accessibility'],
  },
  {
    number: 5,
    title: 'Testing & CI',
    status: 'planned',
    items: ['test_edge_cases', 'snapshot_golden_image', 'run_smoke_test', 'verify_release_build', 'profile_startup'],
  },
];
---

<section class="py-20 lg:py-28">
  <div class="max-w-7xl 2xl:max-w-[85%] mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Roadmap
      </h2>
      <p class="text-lg text-slate-400 max-w-2xl mx-auto">
        Five waves of capabilities, from core debugging to AI-powered autonomous testing.
      </p>
    </div>

    <div class="space-y-6">
      {waves.map((wave) => (
        <div class="rounded-xl border border-brand-border bg-brand-card/20 p-6">
          <div class="flex items-center gap-4 mb-4">
            <div class:list={[
              'w-10 h-10 rounded-lg flex items-center justify-center font-mono font-bold text-sm',
              wave.status === 'current' ? 'bg-brand-purple/20 text-brand-purple' :
              wave.status === 'next' ? 'bg-brand-teal/20 text-brand-teal' :
              'bg-brand-card text-slate-400',
            ]}>
              {wave.number}
            </div>
            <div>
              <h3 class="text-lg font-semibold">{wave.title}</h3>
              <span class:list={[
                'text-xs uppercase tracking-wider',
                wave.status === 'current' ? 'text-brand-purple' :
                wave.status === 'next' ? 'text-brand-teal' :
                'text-slate-400',
              ]}>
                {wave.status === 'current' ? 'In progress' : wave.status === 'next' ? 'Up next' : 'Planned'}
              </span>
            </div>
          </div>
          <div class="flex flex-wrap gap-2">
            {wave.items.map((item) => (
              <code class="text-xs px-2 py-1 rounded bg-brand-darker text-slate-400 font-mono">{item}</code>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
