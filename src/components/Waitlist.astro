<section class="py-20 lg:py-28" id="waitlist">
  <div class="max-w-7xl 2xl:max-w-[85%] mx-auto px-6">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Get early access
      </h2>
      <p class="text-lg text-slate-400 mb-10">
        ComposeProof is in active development. Join the waitlist and we'll notify you when it's ready.
      </p>

      <form
        action="https://buttondown.com/api/emails/embed-subscribe/aldefy"
        method="post"
        target="popupwindow"
        class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto"
        id="waitlist-form"
      >
        <input
          type="text"
          name="metadata__name"
          placeholder="Your name"
          class="flex-1 px-4 py-3 rounded-lg bg-brand-card border border-brand-border text-slate-200 placeholder:text-slate-500 focus:outline-none focus:border-brand-purple focus:ring-1 focus:ring-brand-purple"
        />
        <input
          type="email"
          name="email"
          placeholder="you@email.com"
          required
          class="flex-1 px-4 py-3 rounded-lg bg-brand-card border border-brand-border text-slate-200 placeholder:text-slate-500 focus:outline-none focus:border-brand-purple focus:ring-1 focus:ring-brand-purple"
        />
        <input type="hidden" name="embed" value="1" />
        <button
          type="submit"
          class="px-6 py-3 rounded-lg bg-brand-purple-deep text-white font-medium hover:bg-brand-purple-deep/90 transition-colors whitespace-nowrap"
        >
          Join waitlist
        </button>
      </form>

      <p class="mt-4 text-sm text-slate-500">No spam. Unsubscribe anytime.</p>
    </div>
  </div>
</section>
