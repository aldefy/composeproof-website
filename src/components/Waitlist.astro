<section class="py-20 lg:py-28" id="waitlist">
  <div class="max-w-7xl 2xl:max-w-[85%] mx-auto px-6">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-4">
        Get early access
      </h2>
      <p class="text-lg text-slate-400 mb-8">
        <code class="text-brand-teal">npx composeproof</code> drops for waitlist members in
      </p>

      <!-- Countdown timer -->
      <div class="flex items-center justify-center gap-4 sm:gap-6 mb-10" id="countdown">
        <div class="text-center">
          <div class="text-4xl sm:text-5xl font-bold font-mono gradient-text" id="cd-days">--</div>
          <div class="text-xs text-slate-500 uppercase tracking-wider mt-1">Days</div>
        </div>
        <div class="text-2xl text-slate-600 font-bold">:</div>
        <div class="text-center">
          <div class="text-4xl sm:text-5xl font-bold font-mono gradient-text" id="cd-hours">--</div>
          <div class="text-xs text-slate-500 uppercase tracking-wider mt-1">Hours</div>
        </div>
        <div class="text-2xl text-slate-600 font-bold">:</div>
        <div class="text-center">
          <div class="text-4xl sm:text-5xl font-bold font-mono gradient-text" id="cd-mins">--</div>
          <div class="text-xs text-slate-500 uppercase tracking-wider mt-1">Min</div>
        </div>
        <div class="text-2xl text-slate-600 font-bold">:</div>
        <div class="text-center">
          <div class="text-4xl sm:text-5xl font-bold font-mono gradient-text" id="cd-secs">--</div>
          <div class="text-xs text-slate-500 uppercase tracking-wider mt-1">Sec</div>
        </div>
      </div>

      <form
        action="https://buttondown.com/api/emails/embed-subscribe/aldefy"
        method="post"
        target="popupwindow"
        class="flex flex-col sm:flex-row items-center justify-center gap-3"
        id="waitlist-form"
      >
        <input
          type="text"
          name="metadata__name"
          placeholder="Your name"
          class="flex-1 px-4 py-3 rounded-lg bg-brand-card border border-brand-border text-slate-200 placeholder:text-slate-500 focus:outline-none focus:border-brand-purple focus:ring-1 focus:ring-brand-purple"
        />
        <input
          type="email"
          name="email"
          placeholder="you@email.com"
          required
          class="flex-1 px-4 py-3 rounded-lg bg-brand-card border border-brand-border text-slate-200 placeholder:text-slate-500 focus:outline-none focus:border-brand-purple focus:ring-1 focus:ring-brand-purple"
        />
        <input type="hidden" name="embed" value="1" />
        <button
          type="submit"
          class="px-6 py-3 rounded-lg bg-brand-purple-deep text-white font-medium hover:bg-brand-purple-deep/90 transition-colors whitespace-nowrap"
        >
          Join waitlist
        </button>
      </form>

      <p class="mt-4 text-sm text-slate-500">No spam. Unsubscribe anytime.</p>
    </div>
  </div>
</section>

<script>
  // Sunday Feb 22, 2026 9:00 PM IST (UTC+5:30) = 15:30 UTC
  const target = new Date('2026-02-22T15:30:00Z').getTime();

  function tick() {
    const now = Date.now();
    const diff = Math.max(0, target - now);

    const days = Math.floor(diff / 86400000);
    const hours = Math.floor((diff % 86400000) / 3600000);
    const mins = Math.floor((diff % 3600000) / 60000);
    const secs = Math.floor((diff % 60000) / 1000);

    document.getElementById('cd-days')!.textContent = String(days).padStart(2, '0');
    document.getElementById('cd-hours')!.textContent = String(hours).padStart(2, '0');
    document.getElementById('cd-mins')!.textContent = String(mins).padStart(2, '0');
    document.getElementById('cd-secs')!.textContent = String(secs).padStart(2, '0');

    if (diff === 0) {
      document.getElementById('countdown')!.innerHTML =
        '<div class="text-2xl font-bold text-brand-teal">Available now!</div>';
    }
  }

  tick();
  setInterval(tick, 1000);
</script>
