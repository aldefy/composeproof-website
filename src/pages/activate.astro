---
import Layout from '../layouts/Layout.astro';

// Read machine_id and port from query params (passed by CLI)
const url = new URL(Astro.request.url);
const machineId = url.searchParams.get('machine_id') || '';
const port = url.searchParams.get('port') || '';

const WORKER_URL = 'https://activate.composeproof.dev';
const authUrl = `${WORKER_URL}/auth/github?machine_id=${encodeURIComponent(machineId)}&port=${encodeURIComponent(port)}`;
---

<Layout title="Activate ComposeProof Pro" description="Activate your ComposeProof Pro license with GitHub.">
  <main class="activate-page">
    <div class="activate-card">
      <div class="logo">
        <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
          <rect width="48" height="48" rx="12" fill="#7c3aed"/>
          <text x="50%" y="55%" text-anchor="middle" dominant-baseline="middle" fill="white" font-size="24" font-weight="700">C</text>
        </svg>
      </div>

      <h1>Activate ComposeProof Pro</h1>
      <p class="subtitle">Sign in with GitHub to activate your Pro license on this device.</p>

      {machineId ? (
        <div class="machine-id">
          <span class="label">Device:</span>
          <code>{machineId.substring(0, 8)}...{machineId.substring(machineId.length - 4)}</code>
        </div>
      ) : (
        <div class="no-machine-id">
          <p>Run <code>npx composeproof activate</code> in your terminal to start activation.</p>
        </div>
      )}

      <a href={authUrl} class="github-button" data-has-machine-id={machineId ? 'true' : 'false'}>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Sign in with GitHub
      </a>

      <div class="features">
        <h3>Pro features include:</h3>
        <ul>
          <li>Compose Intelligence — semantic queries, lazy list profiling, state inspection</li>
          <li>Embedded Agent — 11 deep-inspection tools for live Android apps</li>
          <li>Companion App — real-time debug visualization on your phone</li>
          <li>Session screenshots in HTML reports</li>
        </ul>
      </div>
    </div>
  </main>
</Layout>

<style>
  .activate-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .activate-card {
    max-width: 480px;
    width: 100%;
    text-align: center;
    padding: 3rem 2rem;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .logo {
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: #f0f0f0;
  }

  .subtitle {
    color: #888;
    font-size: 0.95rem;
    margin: 0 0 1.5rem;
  }

  .machine-id {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    background: rgba(124, 58, 237, 0.1);
    border: 1px solid rgba(124, 58, 237, 0.2);
    margin-bottom: 1.5rem;
    font-size: 0.85rem;
  }

  .machine-id .label {
    color: #888;
  }

  .machine-id code {
    color: #a78bfa;
    font-family: 'JetBrains Mono', monospace;
  }

  .no-machine-id {
    padding: 1rem;
    border-radius: 8px;
    background: rgba(251, 191, 36, 0.08);
    border: 1px solid rgba(251, 191, 36, 0.2);
    margin-bottom: 1.5rem;
  }

  .no-machine-id p {
    margin: 0;
    color: #fbbf24;
    font-size: 0.9rem;
  }

  .no-machine-id code {
    font-family: 'JetBrains Mono', monospace;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
  }

  .github-button {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 2rem;
    border-radius: 10px;
    background: #f0f0f0;
    color: #111;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: background 0.2s, transform 0.1s;
    margin-bottom: 2rem;
  }

  .github-button:hover {
    background: #fff;
    transform: translateY(-1px);
  }

  .github-button[data-has-machine-id='false'] {
    opacity: 0.5;
    pointer-events: none;
  }

  .features {
    text-align: left;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .features h3 {
    font-size: 0.85rem;
    font-weight: 600;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem;
  }

  .features ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features li {
    padding: 0.4rem 0;
    font-size: 0.9rem;
    color: #aaa;
  }

  .features li::before {
    content: '→ ';
    color: #7c3aed;
  }
</style>
