---
import Layout from '../layouts/Layout.astro';

// Read machine_id and port from query params (passed by CLI)
const url = new URL(Astro.request.url);
const machineId = url.searchParams.get('machine_id') || '';
const port = url.searchParams.get('port') || '';
---

<Layout title="Activate ComposeProof Pro" description="Activate your ComposeProof Pro license with GitHub.">
  <main class="activate-page">
    <div class="activate-card">
      <div class="logo">
        <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
          <rect width="48" height="48" rx="12" fill="#7c3aed"/>
          <text x="50%" y="55%" text-anchor="middle" dominant-baseline="middle" fill="white" font-size="24" font-weight="700">C</text>
        </svg>
      </div>

      <h1>ComposeProof Pro</h1>

      {machineId ? (
        <div class="machine-id">
          <span class="label">Device:</span>
          <code>{machineId.substring(0, 8)}...{machineId.substring(machineId.length - 4)}</code>
        </div>
      ) : null}

      <!-- Paywall: Coming soon -->
      <div class="coming-soon">
        <div class="price-tag">Pro</div>
        <p class="coming-label">Pricing coming soon</p>
        <p class="coming-sub">The free tier has ~30 tools. Pro adds 17 more.</p>
      </div>

      <!-- Notify me -->
      <form
        action="https://buttondown.com/api/emails/embed-subscribe/aldefy"
        method="post"
        target="popupwindow"
        class="notify-form"
      >
        <input
          type="email"
          name="email"
          placeholder="you@email.com"
          required
          class="notify-input"
        />
        <input type="hidden" name="embed" value="1" />
        <input type="hidden" name="tag" value="pro-interest" />
        <button type="submit" class="notify-button">Notify me</button>
      </form>
      <p class="notify-hint">We'll email you when Pro is available to buy.</p>

      <div class="features">
        <h3>What Pro unlocks</h3>
        <ul>
          <li>Compose Intelligence: semantic queries, lazy list profiling, state inspection, recomposition tracking, stability analysis</li>
          <li>Embedded Agent: 11 tools that read permissions, lifecycle, navigation, datastore, coroutines, viewmodel state, and more from running apps</li>
          <li>Companion app: real-time debug visualization on your phone</li>
          <li>Session screenshots in HTML reports</li>
        </ul>
      </div>

      <div class="free-note">
        <p>The free tier is live right now:</p>
        <code>npx composeproof</code>
      </div>
    </div>
  </main>
</Layout>

<style>
  .activate-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .activate-card {
    max-width: 480px;
    width: 100%;
    text-align: center;
    padding: 3rem 2rem;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .logo {
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1.5rem;
    color: #f0f0f0;
  }

  .machine-id {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    background: rgba(124, 58, 237, 0.1);
    border: 1px solid rgba(124, 58, 237, 0.2);
    margin-bottom: 1.5rem;
    font-size: 0.85rem;
  }

  .machine-id .label {
    color: #888;
  }

  .machine-id code {
    color: #a78bfa;
    font-family: 'JetBrains Mono', monospace;
  }

  .coming-soon {
    padding: 1.5rem;
    border-radius: 12px;
    background: rgba(124, 58, 237, 0.06);
    border: 1px solid rgba(124, 58, 237, 0.15);
    margin-bottom: 1.5rem;
  }

  .price-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    background: #7c3aed;
    color: white;
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .coming-label {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #e0e0e0;
  }

  .coming-sub {
    margin: 0.25rem 0 0;
    font-size: 0.85rem;
    color: #888;
  }

  .notify-form {
    display: flex;
    gap: 0.5rem;
    max-width: 340px;
    margin: 0 auto 0.5rem;
  }

  .notify-input {
    flex: 1;
    padding: 0.6rem 0.75rem;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #e0e0e0;
    font-size: 0.9rem;
  }

  .notify-input::placeholder {
    color: #555;
  }

  .notify-input:focus {
    outline: none;
    border-color: #7c3aed;
  }

  .notify-button {
    padding: 0.6rem 1rem;
    border-radius: 8px;
    background: #7c3aed;
    color: white;
    font-weight: 600;
    font-size: 0.85rem;
    border: none;
    cursor: pointer;
    white-space: nowrap;
  }

  .notify-button:hover {
    background: #6d28d9;
  }

  .notify-hint {
    font-size: 0.75rem;
    color: #555;
    margin: 0 0 2rem;
  }

  .features {
    text-align: left;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .features h3 {
    font-size: 0.85rem;
    font-weight: 600;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem;
  }

  .features ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features li {
    padding: 0.4rem 0;
    font-size: 0.85rem;
    color: #aaa;
  }

  .features li::before {
    content: 'â†’ ';
    color: #7c3aed;
  }

  .free-note {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .free-note p {
    margin: 0 0 0.5rem;
    font-size: 0.85rem;
    color: #888;
  }

  .free-note code {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    color: #e0e0e0;
  }
</style>
